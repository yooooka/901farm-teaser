---
interface Props {
  title: string;
}
import "@fontsource-variable/afacad-flux";
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="901farm - A New Era in Agriculture" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-black text-gray-400 p-8 leading-tight">
    <slot />
    <footer>
      <p class="text-xs md:text-sm text-center text-pretty font-sans">
        Copyright Â© 901farm LLC. All rights reserved.
      </p>
    </footer>
  </body>
</html>

<style is:global>
  /* Global styles can be added here */
</style>
