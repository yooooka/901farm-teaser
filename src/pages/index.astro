---
import Layout from '../layouts/Layout.astro';
import { Logo } from '../components/Logo';
---

<Layout title="901farm Rebrand 2025">
  <main class="min-h-screen bg-black text-white overflow-hidden">
    <!-- Hero Section -->
    <div class="container mx-auto px-4 py-12">
      <h1 class="sr-only">901farm Rebrand 2025</h1>
      
      <div class="flex flex-col items-center justify-center min-h-screen gap-8">
        <Logo client:load />

        <div class="text-center space-y-6 opacity-0 animate-fade-in">
          <p class="text-2xl md:text-3xl lg:text-4xl font-light tracking-wide">
            A New Era in Agriculture
          </p>
          <p class="text-lg md:text-xl text-gray-400">
            Coming Spring 2025
          </p>
        </div>
      </div>
    </div>
  </main>
</Layout>