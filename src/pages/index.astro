---
import Layout from "../layouts/Layout.astro";
import { Logo } from "../components/Logo";
---

<Layout title="901farm LLC">
  <main class="min-h-screen bg-black text-white overflow-hidden">
    <!-- Hero Section -->
    <div class="container mx-auto p-8">
      <h1 class="sr-only">901farm LLC</h1>

      <div
        class="flex flex-col items-center justify-center min-h-screen gap-8 max-w-screen-lg mx-auto"
      >
        <Logo client:load />

        <div class="text-center text-gray-300">
          <p
            class="text-sm md:text-base lg:text-2xl text-animation text-pretty font-sans"
          >
            We are creative creatures. Fun, Bold and Non-sense ideas to Life!
          </p>
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .text-animation {
    opacity: 0;
  }

  .text-animation-delayed {
    opacity: 0;
  }

  @media (prefers-reduced-motion: no-preference) {
    .text-animation {
      animation: fadeIn 1s ease-out forwards;
      animation-delay: 2s;
    }

    .text-animation-delayed {
      animation: fadeIn 1s ease-out forwards;
      animation-delay: 2.8s;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .text-animation,
    .text-animation-delayed {
      opacity: 1;
      transform: translateY(0);
      transition: none;
    }
  }
</style>

<script>
  // Check if the user prefers reduced motion
  const prefersReducedMotion = window.matchMedia(
    "(prefers-reduced-motion: reduce)"
  ).matches;

  // If user prefers reduced motion, make text visible immediately
  if (prefersReducedMotion) {
    document
      .querySelectorAll(".text-animation, .text-animation-delayed")
      .forEach((el) => {
        (el as HTMLElement).style.opacity = "1";
        (el as HTMLElement).style.transform = "translateY(0)";
      });
  }
</script>
