---
import Layout from "../layouts/Layout.astro";
import { Logo } from "../components/Logo";
---

<Layout title="901farm LLC">
  <main class="min-h-screen bg-black text-white overflow-hidden">
    <!-- Hero Section -->
    <div class="container mx-auto px-4 py-8">
      <h1 class="sr-only">901farm LLC</h1>

      <div
        class="flex flex-col items-center justify-center min-h-screen gap-12"
      >
        <Logo client:load />

        <div class="text-center space-y-3 opacity-0 animate-fade-in">
          <p class="text-lg md:text-xl text-gray-400 font-semibold">
            We are creative creatures
          </p>
          <p class="text-2xl md:text-3xl lg:text-2xl tracking-wide font-bold">
            Fun, Bold and Non-sense ideas to Life!
          </p>
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fadeIn 1s ease-out forwards;
    animation-delay: 1.5s;
  }
</style>
